<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EAE7E7">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:cardCornerRadius="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giỏ hàng"
            android:textSize="24dp"
            android:gravity="center"
            android:textColor="@color/bg_indicator"
            android:textStyle="bold"
            android:background="#fff"
            android:padding="10dp"/>
    </androidx.cardview.widget.CardView>


    <ScrollView
        android:id="@+id/svCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </ScrollView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thành tiền: "
                android:textColor="@color/purple_700"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:paddingLeft="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vnd"
                android:textSize="12dp"
                android:textStyle="italic"
                android:textColor="#002AFF"
                android:paddingTop="10dp"
                android:layout_toLeftOf="@id/txtMoney"/>
            <TextView
                android:id="@+id/txtMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textColor="#f00"
                android:layout_alignParentRight="true"
                android:paddingTop="10dp"
                android:paddingRight="30dp"
                android:gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thuế: "
                android:textColor="@color/purple_700"
                android:textStyle="bold"
                android:paddingTop="30dp"
                android:paddingLeft="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vnd"
                android:textSize="12dp"
                android:textStyle="italic"
                android:textColor="#002AFF"
                android:paddingTop="30dp"
                android:layout_toLeftOf="@id/txtTax"/>
            <TextView
                android:id="@+id/txtTax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textColor="#f00"
                android:layout_alignParentRight="true"
                android:paddingTop="30dp"
                android:paddingRight="30dp"
                android:gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phí vận chuyển: "
                android:textColor="@color/purple_700"
                android:textStyle="bold"
                android:paddingTop="50dp"
                android:paddingLeft="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vnd"
                android:textSize="12dp"
                android:textStyle="italic"
                android:textColor="#002AFF"
                android:paddingTop="50dp"
                android:layout_toLeftOf="@id/txtDelivery"/>
            <TextView
                android:id="@+id/txtDelivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textColor="#f00"
                android:layout_alignParentRight="true"
                android:paddingTop="50dp"
                android:paddingRight="30dp"
                android:gravity="right"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorDivider"
                android:layout_marginTop="80dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng cộng: "
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:textSize="20dp"
                android:paddingTop="90dp"
                android:paddingLeft="30dp"
                android:paddingBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vnd"
                android:textSize="14dp"
                android:textStyle="italic"
                android:textColor="#002AFF"
                android:paddingTop="90dp"
                android:layout_toLeftOf="@id/txtTotal"/>
            <TextView
                android:id="@+id/txtTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#F44336"
                android:layout_alignParentRight="true"
                android:paddingTop="90dp"
                android:paddingRight="30dp"
                android:gravity="right"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>