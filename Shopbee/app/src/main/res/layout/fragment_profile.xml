<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bebebe"
    tools:context=".fragment.ProfileFragment"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff5800"
        android:orientation="vertical">
        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:src="@drawable/cat_img_view"
                android:layout_width="70dp"
                android:layout_height="70dp"
                />
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profile_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#FFFF"
                    android:text="Meo Meo"/>
                <LinearLayout
                    android:background="@drawable/profile_rd_ranking"
                    android:layout_width="180dp"
                    android:backgroundTint="#a4dded"
                    android:layout_height="25dp"
                    >

                    <TextView
                        android:id="@+id/profile_ranking"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="Thành viên kim cương "
                        android:textStyle="bold"
                        android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:textSize="15dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:textColor="#FFFF"
                        android:id="@+id/profile_follower"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Người theo dõi 1 | "/>
                    <TextView
                        android:textColor="#FFFF"
                        android:id="@+id/profile_follow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đang theo dõi 1"/>
                </LinearLayout>



            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Vui lòng thiết lập thêm profile của bạn!!!!" />

    </LinearLayout>






</ScrollView>