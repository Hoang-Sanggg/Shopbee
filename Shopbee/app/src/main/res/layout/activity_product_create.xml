<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductCreateActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên sản phẩm"
        android:layout_margin="5dp"
        android:textColor="@color/black"/>
    <EditText
        android:textSize="16sp"
        android:id="@+id/edtProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập tên sản phẩm"
        android:layout_margin="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mô tả sản phẩm"
        android:textColor="@color/black"
        android:layout_margin="5dp"/>

    <EditText
        android:layout_margin="5dp"
        android:textSize="16sp"
        android:id="@+id/edtDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập mô tả sản phẩm"/>
    ?<TextView
    android:id="@+id/txtIndustry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Ngành hàng"
    android:layout_margin="5dp"
    android:textColor="@color/black"
   />

    <EditText
        android:id="@+id/edtProductDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Chi tiết sản phẩm"/>
    <EditText
        android:id="@+id/edtWarehouse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kho"/>
    <EditText
        android:id="@+id/edtStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Trạng thái"/>
    <EditText
        android:id="@+id/edtTransportfee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phí vận chuyển"/>

    <Button
        android:id="@+id/btnPush"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Push"/>
    <Button
        android:id="@+id/btnPull"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pull data vừa add vào"/>
    <Button
        android:id="@+id/btnPullbyID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pull data theo id"/>

    <TextView
        android:id="@+id/txtViewData"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</LinearLayout>