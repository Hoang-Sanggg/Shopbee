<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3DDDC"
    tools:context=".fragment.UpsellerFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_sale"
                android:foregroundGravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tv_km"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cập nhật đơn hàng"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:textStyle="normal"
                        android:layout_toRightOf="@+id/iv_salse" />

                    <TextView
                        android:id="@+id/tv_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chưa có cạp nhật đơn hàng"
                        android:textSize="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/iv_salse"
                        android:layout_below="@+id/tv_km"/>

                    <ImageView
                        android:id="@+id/iv_salse"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:maxHeight="100dp"
                        android:src="@drawable/shop"
                        android:layout_alignParentLeft="true"/>

                    <ImageView
                        android:id="@+id/iv_next"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:maxHeight="100dp"

                        android:layout_alignParentRight="true"/>



                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:foregroundGravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tv_live"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ví người bán"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:textStyle="normal"
                        android:layout_toRightOf="@+id/iv_live" />

                    <TextView
                        android:id="@+id/tv_description2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chưa có cập nhật ví người bán"
                        android:textSize="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/iv_live"
                        android:layout_below="@+id/tv_live"/>

                    <ImageView
                        android:id="@+id/iv_live"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:maxHeight="100dp"
                        android:src="@drawable/exchanging"
                        android:layout_alignParentLeft="true"/>

                    <ImageView
                        android:id="@+id/iv_next2"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:maxHeight="100dp"

                        android:layout_alignParentRight="true"/>



                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:foregroundGravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="1dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tv_wallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kênh Marketing"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:textStyle="normal"
                        android:layout_toRightOf="@+id/iv_wallet" />

                    <TextView
                        android:id="@+id/tv_description3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chưa có cập nhật kênh Marketing"
                        android:textSize="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/iv_wallet"
                        android:layout_below="@+id/tv_wallet"/>

                    <ImageView
                        android:id="@+id/iv_wallet"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:maxHeight="100dp"
                        android:src="@drawable/tax"
                        android:layout_alignParentLeft="true"/>

                    <ImageView
                        android:id="@+id/iv_next3"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:maxHeight="100dp"
                        android:layout_alignParentRight="true"/>



                </RelativeLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <TextView
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cập nhật Shopbee"
                android:layout_weight="1"/>

            <TextView
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đọc tất cả(2)"
                android:textColor="#FF5722"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>