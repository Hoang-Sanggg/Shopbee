<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".LoginActivity"
    android:id="@+id/activity_login">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#E3DDDC"
        app:title="Đăng nhập">

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:layout_width="60dp"
        android:layout_gravity="center"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:src="@mipmap/shopbeeicon" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="28dp"
        android:textSize="18sp"
        android:fontFamily="@font/nunito_black"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TextInputLayOutEmail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/nunito_light">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Enter your username"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="28dp"
        android:textSize="18sp"
        android:fontFamily="@font/nunito_black"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TextInputLayOutPassword"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/nunito_light"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Enter your password"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:id="@+id/chk_remember_login"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:text="Stay logged in?"
        android:textColor="#747679"/>

    <Button
        android:id="@+id/btnLogin"
        android:backgroundTint="#E3DDDC"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:onClick="onClickLogin"
        android:text="Đăng nhập"/>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:id="@+id/tvRegister"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_marginStart="18dp"
           android:text="Đăng kí tài khoản mới"
           android:textColor="@color/shopbee_color" />
       <TextView
           android:id="@+id/tvlogin"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:gravity="right"
           android:layout_marginEnd="18dp"
           android:text="Đăng nhập bằng SMS"
           android:textColor="@color/shopbee_color" />
   </LinearLayout>

    <TextView
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Hoặc"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/imb_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="10dp"
        app:backgroundTint="#EAEAEA"
        android:gravity="center"
        android:textAllCaps="true"
        app:icon="@drawable/google_icon_login"
        app:iconSize="25dp"
        app:iconTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:text="Đăng nhập với google" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLoginFace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:textAllCaps="true"
        android:padding="10dp"
        app:backgroundTint="#EAEAEA"
        app:icon="@drawable/facebook_icon_login"
        app:iconSize="30dp"
        app:iconTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:text=" Đăng nhập với facebook" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLoginApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:textAllCaps="true"
        android:padding="10dp"
        app:backgroundTint="#EAEAEA"
        app:icon="@drawable/apple_icon_login"
        app:iconSize="30dp"
        app:iconTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:text="Đăng nhập với Apple ID" />






</LinearLayout>

