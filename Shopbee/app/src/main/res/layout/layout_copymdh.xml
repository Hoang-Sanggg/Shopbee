<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="15dp"
    android:background="@drawable/border_item_featured_product">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:fontFamily="@font/nunito_semi_bold"
        android:textColor="@color/shopbee_color"
        android:text="Phí Vận Chuyển"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:text="Trọng lượng :"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="18dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="18dp"
                android:text="Phí vận chuyển : "
                android:gravity="center"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_weight="1">
            <EditText
                android:id="@+id/edtTrongLuong"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="18dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/txtPhiVanChuyen"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="18dp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnTamTinh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Tạm tính"

            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSucess"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Đồng Ý"

            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
    </LinearLayout>

</LinearLayout>